{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
<div class="row">
    <div class="col col-6">
        <h3>Stores:</h3>
        <ul>
            {% for store in stores %}
            <a href="/stores/{{ store.getId() }}"><li>{{ store.getName() }}</li></a>
            {% endfor %}
        </ul>
    </div>
    <div class="col col-6">
        <h3>Brands:</h3>
        <ul>
            {% for brand in brands %}
            <a href="/brands/{{ brand.getId() }}"><li>{{ brand.getName() }}</li></a>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
